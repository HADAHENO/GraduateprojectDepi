@model Doctor.Model.App.ApplicationUser

<div class="container mt-5">
    <div class="card shadow-lg p-4 mb-4">
        <h2 class="text-center mb-4 text-primary">User Profile</h2>

        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Username:</strong> @Model.UserName</p>
            </div>
            <div class="col-md-6">
                <p><strong>Email:</strong> @Model.Email</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
            </div>
            <div class="col-md-6">
                <p><strong>Registration Date:</strong> @Model.BirthDate.ToShortDateString()</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Role:</strong> @Model.Role</p>
            </div>
        </div>

        <!-- Optional Edit Button -->
        <div class="text-center">
            <a href="@Url.Action("EditProfile", "Profile", new { id = Model.Id })" class="btn btn-warning shadow-sm me-2">Edit Profile</a>
            <a href="@Url.Action("Index", "Users")" class="btn btn-secondary shadow-sm">Back to List</a>
        </div>
    </div>
</div>
