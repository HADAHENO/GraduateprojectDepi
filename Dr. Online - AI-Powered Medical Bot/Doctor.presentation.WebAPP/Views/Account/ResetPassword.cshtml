@model ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @using Doctor.presentation.WebAPP.ViewModel;
}

<h1 class="text-center">Reset Password</h1>
<div class="container mt-5">
    <form class="border p-4 rounded shadow-lg" asp-action="ResetPassword" asp-controller="Account" method="post" style="background-color: #f9f9f9;">
        <div class="mb-3">
            <input class="form-control shadow-sm" asp-for="Password" placeholder="Enter new password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="form-control shadow-sm" asp-for="ConfirmPassword" placeholder="Confirm new password" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button class="btn btn-success shadow-lg" type="submit">Reset Password</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Optionally include validation script if needed
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
            // <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        </script>
}
