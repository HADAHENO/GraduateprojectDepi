@model ForgetPasswordVM
@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @using Doctor.presentation.WebAPP.ViewModel;
}

<h1 class="text-center">Forget Password</h1>
<div class="container mt-5">
    <form asp-action="ForgetPassword" asp-controller="Account" method="post" class="border p-4 rounded shadow-lg" style="background-color: #f9f9f9;">
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Enter your Email</label>
            <input asp-for="Email" placeholder="Enter your Email" class="form-control shadow-sm" style="border: 1px solid #ccc;" required />
            <span asp-validation-for="Email" class="text-danger"></span> <!-- Validation message -->
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success shadow-lg">Send Email</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Optionally include validation script if needed
       <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
            // <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        </script>
}
