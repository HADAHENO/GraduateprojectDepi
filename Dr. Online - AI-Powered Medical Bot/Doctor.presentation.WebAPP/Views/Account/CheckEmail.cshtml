@{
    ViewData["Title"] = "CheckEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .alert {
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 300px;
        padding: 15px;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 4px;
        display: none; /* Initially hidden */
        z-index: 9999; /* To appear above other elements */
    }
</style>

<h1>Check Email</h1>
<div class="alert" id="emailAlert">
    <strong>Check your Email</strong>
</div>

<script>
    // Show the alert message
    window.onload = function() {
        var alert = document.getElementById('emailAlert');
        alert.style.display = 'block'; // Show the alert
        setTimeout(function() {
            alert.style.display = 'none'; // Hide after 5 seconds
        }, 5000); // 5000 milliseconds = 5 seconds
    }
</script>
