@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @using Doctor.Model.App
    @using Doctor.presentation.WebAPP.ViewModel
}

<h1 class="text-center mb-4">Register</h1>
<div class="container mt-5">
    <form asp-action="Register" asp-controller="Account" method="post" class="border p-4 rounded shadow-lg" style="background-color: #f9f9f9;">

        <div class="mb-3">
            <label for="UserName" class="form-label">User Name</label>
            <input id="UserName" name="UserName" class="form-control shadow-sm" type="text" required />
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input id="Password" name="Password" class="form-control shadow-sm" type="password" required />
        </div>

        <div class="mb-3">
            <label for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input id="ConfirmPassword" name="ConfirmPassword" class="form-control shadow-sm" type="password" required />
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input id="Email" name="Email" class="form-control shadow-sm" type="email" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Gender</label>
            <div class="form-check">
                <input id="GenderFemale" name="Gender" class="form-check-input" value="@Gender.female" type="radio" />
                <label for="GenderFemale" class="form-check-label">Female</label>
            </div>
            <div class="form-check">
                <input id="GenderMale" name="Gender" class="form-check-input" value="@Gender.male" type="radio" />
                <label for="GenderMale" class="form-check-label">Male</label>
            </div>
        </div>

        <div class="mb-3">
            <label for="BirthDate" class="form-label">Birth Date</label>
            <input id="BirthDate" name="BirthDate" type="date" class="form-control shadow-sm" required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success shadow-lg">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Optionally include validation script if needed
       <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
            // <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        </script>
}
